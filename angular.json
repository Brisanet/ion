{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "ion": {
      "projectType": "library",
      "root": "projects/ion",
      "sourceRoot": "projects/ion/src",
      "prefix": "ion",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-ng-packagr:build",
          "options": {
            "tsConfig": "projects/ion/tsconfig.lib.json",
            "project": "projects/ion/ng-package.json"
          }
        ,          "configurations": {
            "production": {
              "tsConfig": "projects/ion/tsconfig.lib.prod.json"
            }
          }
},
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "projects/ion/tsconfig.lib.json",
              "projects/ion/tsconfig.spec.json"
            ],
            "exclude": ["**/node_modules/**"]
          }
        }
      }
    }
  },
  "defaultProject": "ion",
  "schematics": {
    "@schematics/angular:component": {
      "styleext": "scss"
    }
  }
}
